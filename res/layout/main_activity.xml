<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroller"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

	    <Button
	        android:id="@+id/btnScholarship"
	        android:layout_width="150dp"
	        android:layout_height="60dp"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="163dp"
	        android:text="Scholarships" />
	
	    <TextView
	        android:id="@+id/txtTitle"
	        android:layout_width="match_parent"
	        android:layout_height="100dp"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="34dp"
	        android:gravity="center"
	        android:text="Social Investment Product"
	        android:textSize="35sp"
	        android:textStyle="bold" />
	
	    <Button
	        android:id="@+id/btnUnemployment"
	        android:layout_width="150dp"
	        android:layout_height="60dp"
	        android:layout_alignLeft="@+id/btnScholarship"
	        android:layout_below="@+id/btnScholarship"
	        android:layout_marginTop="14dp"
	        android:text="Unemployment Scheme" />
	
	    <Button
	        android:id="@+id/btnMap"
	        android:layout_width="150dp"
	        android:layout_height="60dp"
	        android:layout_alignLeft="@+id/btnUnemployment"
	        android:layout_below="@+id/btnUnemployment"
	        android:layout_marginTop="14dp"
	        android:text="London Map" />
	
	    <Button
	        android:id="@+id/txthelp"
	        android:layout_width="150dp"
	        android:layout_height="60dp"
	        android:layout_alignLeft="@+id/btnMap"
	        android:layout_below="@+id/btnMap"
	        android:layout_marginTop="14dp"
	        android:text="Help" />

	</RelativeLayout>
</ScrollView>