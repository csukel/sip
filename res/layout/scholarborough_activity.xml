<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroller"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <SeekBar
            android:id="@+id/skbScholarLowUnemployment"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtScholarUnemployment"
            android:layout_below="@+id/txtScholarUnemployment" />

        <TextView
            android:id="@+id/txtScholarLowUnemployment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/skbScholarLowUnemployment"
            android:layout_below="@+id/skbScholarLowUnemployment"
            android:text="Lower bound"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <SeekBar
            android:id="@+id/skbScholarMaxUnemployment"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtScholarLowUnemployment"
            android:layout_below="@+id/txtScholarLowUnemployment" />

        <TextView
            android:id="@+id/txtScholarMaxUnemployment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/skbScholarMaxUnemployment"
            android:layout_below="@+id/skbScholarMaxUnemployment"
            android:text="Upper bound"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <SeekBar
            android:id="@+id/skbLowCrime"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtCrimeRate"
            android:layout_below="@+id/txtCrimeRate" />

        <TextView
            android:id="@+id/txtLowCrime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/skbLowCrime"
            android:layout_below="@+id/skbLowCrime"
            android:text="Lower bound"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <SeekBar
            android:id="@+id/skbMaxCrime"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtLowCrime"
            android:layout_below="@+id/txtLowCrime" />

        <TextView
            android:id="@+id/txtMaxCrime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/skbMaxCrime"
            android:layout_below="@+id/skbMaxCrime"
            android:text="Upper bound"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/btnResultMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtMaxCrime"
            android:layout_alignRight="@+id/skbMaxCrime"
            android:layout_below="@+id/txtMaxCrime"
            android:layout_marginTop="24dp"
            android:text="Show Result on Map" />

        <Button
            android:id="@+id/btnResultList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnResultMap"
            android:layout_alignRight="@+id/btnResultMap"
            android:layout_below="@+id/btnResultMap"
            android:text="Show Result on List" />

        <TextView
            android:id="@+id/txtCrimeRate"
            android:layout_width="190dp"
            android:layout_height="25dp"
            android:layout_alignLeft="@+id/txtScholarMaxUnemployment"
            android:layout_below="@+id/txtScholarMaxUnemployment"
            android:layout_marginTop="28dp"
            android:text="Crime Rate"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtScholarUnemployment"
            android:layout_width="190dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:text="Unemployment Rate"
            android:textSize="20sp" />
        
    </RelativeLayout>

</ScrollView>